<h3>Comments</h3>
	<% @post.comments.each do |comment| %>
		<div class='container'>
			<p>
				<strong><%= comment.username %></strong>: <%= comment.body %><br>
				<% if policy(comment).destroy? %>
					<%= link_to "Delete", [comment.post, comment], method: :delete, data: {confirm: 'Are you sure to delete comment?'}, :class => 'btn btn-outline-danger' %>
				<% end %>
			</p>
		</div><hr>
	<% end %>